package test;
import java.applet.*;
import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

class Penel_1 extends JPanel{
	JTextField text1,text2,text3;
	Penel_1(){
		text1 = new JTextField(10);
		text2 = new JTextField(10);
		text3 = new JTextField(10);
		setLayout(new GridLayout(1,6));
		add(new JLabel("起始数",JLabel.RIGHT)); 
		add(text1);
		add(new JLabel("终止数",JLabel.RIGHT)); 
		add(text2);
		add(new JLabel("因子",JLabel.RIGHT)); 
		add(text3);
	}		
}

class Penel_2 extends JPanel{
	JTextArea text;
	JButton start_button;
	Penel_2(){
		text = new JTextArea(4,10);
		text.setLineWrap(true);
		JScrollPane jsp = new JScrollPane(text);
		start_button = new JButton("start");
		setLayout(new GridLayout(1,4));
		add(new JLabel("计算结果",JLabel.RIGHT)); 
		add(jsp);
		add(new Label()); 
		add(start_button);
	}		
}

public class example5_10 extends Applet implements ActionListener {
	Panel_1 panel_1;
	Panel_2 panel_2;
	public void init() {
		
	}
	
}
